    public bool IsViewOnly { get; set; } = false;
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string InputID { get; set; } = "inputNumberic";
    [Parameter]
    public string InputName { get; set; } = "inputNumberic";
    [Parameter]
    public string Placeholder { get; set; } = "";
    [Parameter]
    public EventCallback<ChangeEventArgs> ChangeEventArgs { get; set; }

